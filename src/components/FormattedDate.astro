---
export interface Props {
	date: Date;
}

const { date } = Astro.props;
---

<time datetime={date.toISOString()}>
	{
		date.toLocaleDateString("en-us", {
			year: "numeric",
			month: "short",
			day: "numeric",
		})
	}
</time>
<style>
	time {
		display: block;
		margin: 0.5rem 0;
		font-size: 1.2rem;
		color: #b3b0b0 !important;
	}
</style>
