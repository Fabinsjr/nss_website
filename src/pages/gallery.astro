---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import Sidebar from "../components/Sidebar.astro";

const posts = [
    "/prize_1.png",
    "/prize_2.png",
    "/park.jpg",
    "/poster_1.jpg",
    "/Poster_2.jpg",
    "/akash annan.jpg",

];
---

<!DOCTYPE html>
<html lang="en">
    <head>
        <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
        <style>
            ul {
                list-style-type: none;
                padding: unset;
            }
            ul li {
                display: flex;
            }
            ul li :global(time) {
                flex: 0 0 130px;
                font-style: italic;
                color: #595959;
            }
            ul li a:visited {
                color: #8e32dc;
            }
        </style>
    </head>
    <body>
        <Header />
        <main>
            <Sidebar />
            <section>
                <ul>
                    {
                        posts.map((post) => (
                            <li>
                                <div>
                                    <img src={post} alt="" />
                                </div>
                            </li>
                        ))
                    }
                </ul>
            </section>
        </main>
        <Footer />
        <style>
            div {
                border: 1px solid #ccc;
                padding: 2rem;
                width: 100%;
                background-color: #111111ef;
                color: #fff;
            }
            h2 {
                margin: 0;
                font-size: 2rem;
                color: #fff;
                font-weight: 400;
            }

            a {
                display: block;
            }
            img {
                display: flex;
                margin: 0.5rem 0.5rem 0.5rem 0.5rem;
                width: 60%;
                height: 100%;
            }
        </style>
    </body>
</html>
